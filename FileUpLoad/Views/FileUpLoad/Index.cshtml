            //记录表单中所有文件上传信息
            var allFileInfo = {};
            allFileInfo.FileName = "总进度";
            allFileInfo.FinishedSize = 0;
            allFileInfo.TotalSize = 0;
            allFileInfo.TotalFileCnt = 0;
            allFileInfo.FinishedFileCnt = 0;
            allFileInfo.FileHandlers = [];

            //循环input表单中所有的File文件
            $fileInput.each(function () {
                $(this.files).each(function () {
                    allFileInfo.TotalFileCnt += 1;
                    allFileInfo.TotalSize += this.size;
                });
            });

            //创建总进度条
            var allProgress = new ProgressHandler(allFileInfo);     

            //对表单中包含文件依次上传
            $fileInput.each(function () {
                var inputFileName = this.name;
                $(this.files).each(function () {
                    var that = this;
                    var handler = new FileHandler({
                        file: that,
                        inputFileName: inputFileName,
                        Progress: ProgressHandler                   //传递创建进度条的方法
                    }, (objFile) => {                               //监控每个文件上传状态
                        switch (objFile.SendStatus) {
                            case 0:
                                //传输中
                                allFileInfo.FinishedSize += objFile.BlockSize;
                                break;
                            case 1:
                                //完成传输
                                allFileInfo.FinishedSize += objFile.TotalSize % objFile.BlockSize;
                                allFileInfo.FinishedFileCnt += 1;
                                if (allFileInfo.FinishedFileCnt == allFileInfo.TotalFileCnt) {
                                    //所有文件传送完成
                                    alert("上传完成！");
                                }
                                break;
                            case -1:
                                //发生异常//等待指令
                                break;
                        }
                        allProgress(allFileInfo);
                    });
                    allFileInfo.FileHandlers.push(handler);
                    handler.Send(handler);
                });
            });

